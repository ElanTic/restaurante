@model IEnumerable<restaurante.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Producto bebida = null;
    Producto entrada= bebida;
    Producto platillo= bebida;
}

<div class="text-center">
    <h1 class="display-4">La posada de Jose Luis</h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active";">
          <img class="center-block w-75 " src="/imagenes/muestras/rancho.jpg" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h1>La posada de jose luiz </h1>
            <h3> Ven y deleitate con las legendarias recetas del caso de Jose Luis</h3>
          </div>
        </div>
        <div class="carousel-item ">
          <img class="center-block w-75 " src="/imagenes/muestras/recetasjl.png" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>Las entradas y platos mas magicos de la meceta</h5>
            <p> </p>
          </div>
        </div>
        <div class="carousel-item">
          <img class="center-block w-75 " src="/imagenes/muestras/elcasodejoseluis.webp" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>Platos recien hechos con los ingredientes mas frescos</h5>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
    </div>
</div>
<div class= "container ">
    <div class ="row">
        <div class = "col-12 d-flex justify-content-center " >
        <h1>Nuestra seleccion</h1>
        </div>
    </div>
    <div class= "row">
        @foreach(var producto in Model.OrderBy(o => o.Id)  )
        {
                @if (@producto.idCategoria == 3)
                { bebida = producto;}
                @if (@producto.idCategoria == 4)
                { entrada = producto; }
                @if (@producto.idCategoria == 5)
                { platillo = producto; }
                              

        }
        <div class = "col-sm-8 col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@bebida.rutaImagen" alt="Card image cap">
                    <div class="card-body">
                    <h5 class="card-title">bebidas </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.DisplayNameFor(Model => Model.Name): @bebida.Name </li>
                    </ul>
                    <div class="card-body">
                       <button type="button" class="btn btn-info"><a asp-controller="Productos" asp-action="Details" asp-route-id="@bebida.Id">Detalles</a> |</button>
                    </div>
                </div>
            </div>
   
  
            <div class = "col-sm-8 col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@entrada.rutaImagen" alt="Card image cap">
                    <div class="card-body">
                    <h5 class="card-title">Entradas </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.DisplayNameFor(Model => Model.Name): @entrada.Name </li>
                    </ul>
                    <div class="card-body">
                       <button type="button" class="btn btn-info"><a asp-controller="Productos" asp-action="Details" asp-route-id="@entrada.Id">Detalles</a> |</button>
                    </div>
                </div>
            </div>

            <div class = "col-sm-8 col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@platillo.rutaImagen" alt="Card image cap">
                    <div class="card-body">
                    <h5 class="card-title">Platos </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.DisplayNameFor(Model => Model.Name): @platillo.Name </li>
                    </ul>
                    <div class="card-body">
                       <button type="button" class="btn btn-info"><a asp-controller="Productos" asp-action="Details" asp-route-id="@platillo.Id">Detalles</a> |</button>
                    </div>
                </div>
            </div>
        
    </div>
</div>
