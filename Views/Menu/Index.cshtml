@model IEnumerable<restaurante.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<div class= "container ">
    <div class ="row">
        <div class = "col-12 d-flex justify-content-center " >
        <h1>Entradas</h1>
        </div>
    </div>
    <div class= "row">
    @if (Model.Count() > 0)
    {
        @foreach(var producto in Model.OrderBy(o => o.Id)  )
        {
                @if(producto.idCategoria == 4)
                {
                   <div class = "col-sm-8 col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@producto.rutaImagen" alt="Card image cap">
                            <div class="card-body">
                            <h5 class="card-title">@producto.Name </h5>
                            </div>
                            <ul class="list-group list-group-flush">
                            <li class="list-group-item">@Html.DisplayNameFor(Model => Model.precio): @producto.idCategoria </li>
                            </ul>
                            <div class="card-body">
                               <button type="button" class="btn btn-info"><a asp-controller="Productos" asp-action="Details" asp-route-id="@producto.Id">Detalles</a> |</button>
                            </div>
                        </div>
                    </div>
                }
            }
    }
    </div>
</div>
